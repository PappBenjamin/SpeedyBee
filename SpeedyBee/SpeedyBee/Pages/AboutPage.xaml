<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="SpeedyBee.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="About">

    <StackPanel Margin="20">
        <TextBlock Text="About SpeedyBee"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <TextBlock TextWrapping="Wrap" 
                   Margin="0,0,0,20">
            SpeedyBee is an advanced line follower robot project designed specifically for 
            the RoboChallenge 2025 competition. The project combines cutting-edge sensor 
            technology with sophisticated control algorithms to achieve precise line following capabilities.
        </TextBlock>

        <TextBlock Text="Project Contributors"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,20,0,10"/>

        <TextBlock>
            <Hyperlink NavigateUri="https://github.com/PappBenjamin" 
                       RequestNavigate="Hyperlink_RequestNavigate">
                Benjamin Papp
            </Hyperlink>
        </TextBlock>

        <TextBlock Text="License"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,20,0,10"/>

        <TextBlock Text="MIT License"
                   Margin="0,0,0,10"/>
    </StackPanel>
</Page>