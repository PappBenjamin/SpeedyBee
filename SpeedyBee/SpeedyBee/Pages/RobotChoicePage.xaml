<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="SpeedyBee.Pages.RobotChoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Robot Selection">

    <StackPanel Margin="20">
        <TextBlock Text="Select Robot" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <Grid Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Robot Name" 
                       FontWeight="Bold" 
                       Grid.Column="0"/>
            <TextBlock Text="Description" 
                       FontWeight="Bold" 
                       Grid.Column="1"/>
            <TextBlock Text="Action" 
                       FontWeight="Bold" 
                       Grid.Column="2"/>

            <Border Grid.Row="1" 
                    Grid.ColumnSpan="3" 
                    BorderBrush="Gray" 
                    BorderThickness="0,1,0,0" 
                    Margin="0,5"/>
        </Grid>

        <!-- Robot 1 -->
        <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="SpeedyBee v1" 
                       Grid.Column="0"/>
            <TextBlock Text="Prototype model for PD control tests" 
                       Grid.Column="1"/>
            <Button Content="Select" 
                    Grid.Column="2" 
                    Padding="20,5"
                    Click="SelectRobot_Click"
                    Tag="v1"/>
        </Grid>

        <!-- Robot 2 -->
        <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="SpeedyBee v2" 
                       Grid.Column="0"/>
            <TextBlock Text="Competition-tuned version" 
                       Grid.Column="1"/>
            <Button Content="Select" 
                    Grid.Column="2" 
                    Padding="20,5"
                    Click="SelectRobot_Click"
                    Tag="v2"/>
        </Grid>

        <TextBlock x:Name="SelectedRobotText"
                   Margin="0,20,0,0"
                   FontWeight="Bold"/>
    </StackPanel>
</Page>