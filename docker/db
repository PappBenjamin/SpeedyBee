drop table if exists IMU_DATA;
drop table if exists SETTING_PID;
drop table if exists runs;


CREATE TABLE IMU_DATA (
    id SERIAL PRIMARY KEY,
    timestamp TIMESTAMP NOT NULL,
    accel_x FLOAT NOT NULL,
    accel_y FLOAT NOT NULL,
    accel_z FLOAT NOT NULL,
    rot_x FLOAT NOT NULL,
    rot_y FLOAT NOT NULL,
    rot_z FLOAT NOT NULL

);

CREATE TABLE runs (
    id SERIAL PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    timestamp TIMESTAMP NOT NULL,
    frame_count INT DEFAULT 0,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

ALTER TABLE imu_data ADD COLUMN run_id INT REFERENCES runs(id) ON DELETE CASCADE;

CREATE TABLE SETTING_PID (
    id SERIAL PRIMARY KEY,
    kp FLOAT NOT NULL,
    ki FLOAT NOT NULL,
    kd FLOAT NOT NULL,
    speed FLOAT NOT NULL
);

